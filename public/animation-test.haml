!!!
%html
  %head
    %meta(charset='UTF-8')
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title testing animation
    %link(rel='stylesheet' href='dist/styles/animation-test.min.css')
  %body
    - filenames = ['apple.svg', 'bowling.svg', 'box.svg', 'cabbage.svg', 'cactus.svg', 'can.svg', 'cat.svg', 'cleaver.svg', 'cockroach.svg', 'coffin.svg', 'cookie.svg', 'cup.svg', 'fish.svg', 'floppydisk.svg', 'gyro.svg', 'heart.svg', 'knife.svg', 'pill.svg', 'pillbottle.svg', 'potatoes.svg', 'pumpkin.svg', 'r2d2.svg', 'rainbow.svg', 'scissors.svg', 'shoe.svg', 'skateboard.svg', 'smartphone.svg', 'snowglobe.svg', 'sofa.svg', 'swissarmyknife.svg', 'teabag.svg', 'tentacle.svg', 'triangle.svg', 'umbrella.svg', 'voodoodoll.svg', 'wallet.svg']
    - methods = ['acquire', 'hinge', 'zoomIn']
    - static = ['jello', 'bounce', 'shake', 'rubberBand', 'swing', 'tada', 'wobble']
    %main
      #game-container
      %img#static-img(width=200)
      .item-menu
        %select#test-file(name='select badge')
          %option(selected disable)select badge
          - (filenames).each do |file|
            %option(value='images/badges/#{file}') #{file}
      .temp-objects
        %button#temp-button(type='button')temp animation
        %button#random-button(type='button')random temp animation
        %select#test-method(name='select method')
          %option(selected disable)select method
          - (methods).each do |method|
            %option(value='#{method}') #{method}
      .static-objects
        %button#static-button(type='button')static animation
        %select#static-method(name='select method')
          %option(selected disable)select method
          - (static).each do |method|
            %option(value='#{method}') #{method}

      .screen
        %button#screen-shake(type='button')screen shake!




    %script(src="src/js/jquery-3.1.1.js")
    %script(src="src/js/animations.js")
